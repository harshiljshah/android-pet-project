<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:textAlignment="center"
    android:padding="50dp"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:text="@string/power_status"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/charging_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/charging_str"
            />

        <TextView
            android:id="@+id/not_charging_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/not_charging_str"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:columnCount="2"
            android:layout_marginTop="250dp">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_vertical"
                android:text="@string/battery_low_count_label"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/low_counts"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="1"

                android:layout_marginTop="0dp"
                android:background="@drawable/text_circle"
                android:textColor="#FFFFFF"

                android:gravity="center"

                android:textSize="18sp" />
        </GridLayout>




</LinearLayout>